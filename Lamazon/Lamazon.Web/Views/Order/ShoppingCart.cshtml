@using Lamazon.Services.ViewModels.OrderItem

@model Lamazon.Services.ViewModels.Order.OrderViewModel

<div class="card shadow">
    <div class="card-header">
        <div class="row px-4">
            <div class="col-6">
                <h5>Your Shopping Cart</h5>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">

            <div class="col-md-12">

                @if (Model == null)
                {
                    <div class="container text-center p-5 align-items-center">

                        <h3>Your cart is empty</h3>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                            Go back to explore
                        </a>
                    </div>
                }
                else
                {
                    @foreach (OrderItemViewModel item in Model.Items)
                    {
                        <div class="row border-bottom align-items-center">

                            <div class="col-4 text-center row p-3">

                                <div class="col-12 text-center p-1">
                                    <img src="@item.Product.ImageUrl" class="card-img-top rounded w-50" />
                                </div>

                                <div class="col-12">
                                    <h5 class="text-uppercase text-secondary"> @item.Product.Name</h5>
                                </div>
                            </div>

                            <div class="col-8 text-center row align-items-center">

                                <div class="col-3 text-md-right">
                                    <h5 class="fw-bold">
                                        @item.Product.Price
                                        <span class="text-muted"> x </span>
                                        @item.Qty
                                        = @(item.Product.Price * @item.Qty)
                                    </h5>
                                </div>

                                <div class="col-6">
                                    <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-outline-primary"> <strong>+</strong> </a>
                                        <a class="btn btn-outline-primary"> <strong>-</strong> </a>
                                    </div>
                                </div>

                                <div class="col-3">
                                    <a class="btn btn-danger"> DELETE </a>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>

        </div>

    </div>

    @if (Model != null)
    {
        <div class="card-footer">
            <div class="row">
                <div class="col-4 offset-md-4">
                    <ul class="list-group mb-4">

                        <li class="d-flex justify-content-between align-items-center">

                            <h5 class="text-uppercase"> Total (USD) </h5>
                            <h4 class="fw-bolder"> @Model.TotalPrice </h4>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 offset-md-5">
                    <a asp-action="Summary" class="btn btn-primary">Continue</a>
                </div>
            </div>

        </div>
    }

</div>